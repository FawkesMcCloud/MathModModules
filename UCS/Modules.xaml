<UserControl x:Class="MathModMudules.UCS.Modules"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MathModMudules.UCS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Button Content="Метод перебора" Margin="10" Grid.Row="0" Click="Button_Click"/>
        <Button Content="Симплекс-метод" Margin="10" Grid.Row="1" Click="Button_Click_1"/>
        <Button Content="Транспортная задача" Margin="10" Grid.Row="2" Click="Button_Click_2" />
        <Button Content="Поиск кратчайшего пути" Margin="10" Grid.Row="3" Click="Button_Click_3"/>



    </Grid>
</UserControl>
